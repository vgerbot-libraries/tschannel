{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "inlineSourceMap": false,
        "sourceMap": true,
        "typeRoots": [
            "../src/typings",
            "../node_modules/@types",
            "./typings"
        ],
        "types": [
            "mocha",
            "node",
            "chai",
            "sinon",
            "sinon-chai",
            "chai-as-promised"
        ],
        "experimentalDecorators": true,
        "paths": {
            "@tschannel/core": ["../src/index.ts"]
        }
    },
    "include": [
        "../src", "./"
    ]
}
