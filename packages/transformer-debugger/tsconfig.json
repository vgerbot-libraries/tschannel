{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["dom", "esnext", "scripthost", "es2015.promise", "WebWorker"],
        "strict": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "alwaysStrict": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": false,
        "declaration": false,
        "importHelpers": true,
        "listFiles": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "paths": {
            "@tschannel/core": ["../tschannel/src/index.ts"]
        },
        "plugins": [{
            "transform": "@tschannel/transformer"
        }]
    },
    "include": ["src"]
}
