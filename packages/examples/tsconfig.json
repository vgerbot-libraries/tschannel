{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es2017",
        "lib": [
            "dom",
            "esnext",
            "scripthost",
            "es2015.promise",
            "WebWorker"
        ],
        "strict": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "alwaysStrict": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "declaration": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "listFiles": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "esModuleInterop": true
    },
    "include": [
        "./**/src"
    ]
}
