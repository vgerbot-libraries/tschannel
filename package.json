{
    "name": "channal-ts-parent",
    "private": true,
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "commit": "git-cz",
        "lint:all": "yarn workspace @tschannel/core lint",
        "transformer": "yarn workspace @tschannel/transformer",
        "transformer:test": "yarn workspace @tschannel/transformer test",
        "transformer:debug": "yarn workspace transformer-debugger",
        "debug:ci": "yarn workspace @tschannel/core debug:ci"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/y1j2x34/channel-ts.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/y1j2x34/channel-ts/issues"
    },
    "homepage": "https://github.com/y1j2x34/channel-ts#readme",
    "devDependencies": {
        "lerna": "^3.22.1",
        "commitizen": "^4.0.3",
        "commitlint": "8.3.4",
        "cz-customizable": "^6.2.0",
        "lint-staged": "9.5.0",
        "husky": "4.0.7"
    },
    "workspaces": [
      "./packages/*"
    ],
    "config": {
        "commitizen": {
            "path": "node_modules/cz-customizable"
        }
    },
    "lint-staged": {
        "packages/channel-ts/{src,test}/**/*.{js,ts,tsx}": [
            "yarn workspace channel-ts run format",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    }
}
